<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<jmxConfigurator />
    <property name="LOG_HOME" value="/data/tomcatlogs/wyqp.wechat"/>  <!-- catalina.base -->   

	<appender name="console" class="ch.qos.logback.core.ConsoleAppender">
		<!-- 典型的日志pattern -->
		<encoder>
			<pattern>%date{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{128} - %msg%n</pattern>
		</encoder>
	</appender>
	
	<!-- 演示按时间滚动的策略 -->
	<appender name="defaultlogFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${LOG_HOME}/logs/log.log</file>
		
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${LOG_HOME}/logs/log.%d{yyyy-MM-dd}.log</fileNamePattern>
			<!-- 保留 30天数据，默认无限-->
			<maxHistory>60</maxHistory>
		</rollingPolicy>
		
		<encoder>
			<pattern>%date{HH:mm:ss.SSS} [%thread] %-5level %logger{128} - %msg%n</pattern>
		</encoder>
	</appender>
	

	
	<logger name="org.springframework" level="ERROR" >
		<appender-ref ref="console" />
		<appender-ref ref="defaultlogFile" />
	</logger>
<!-- project default level -->
	<logger name="cn.worldwalker.game.wyqp.wechat" level="ERROR" additivity="false">
		<appender-ref ref="console" />
		<appender-ref ref="defaultlogFile" />
	</logger>
	
	<!-- root -->
	<root level="ERROR">
		<appender-ref ref="console" />
		<appender-ref ref="defaultlogFile" />
	</root>
</configuration>